{
  "name": "polycrate-vscode",
  "displayName": "Polycrate DevOps Platform",
  "description": "ðŸš€ Complete VS Code extension for Polycrate DevOps platform: IntelliSense, validation, version diff, Hub integration & more",
  "version": "0.1.2",
  "publisher": "ayedo-cloud-solutions",
  "author": {
    "name": "Ayedo Cloud Solutions GmbH",
    "email": "info@ayedo.de",
    "url": "https://ayedo.de"
  },
  "homepage": "https://ayedo.de",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayedo/polycrate-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/ayedo/polycrate-vscode/issues"
  },
  "sponsor": {
    "url": "https://ayedo.de"
  },
  "icon": "polycrate-logo.png",
  "galleryBanner": {
    "color": "#68369b",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "polycrate",
    "devops",
    "infrastructure",
    "automation",
    "yaml",
    "kubernetes",
    "containers",
    "blocks",
    "workspace",
    "ayedo",
    "hub",
    "registry"
  ],
  "license": "MIT",
  "activationEvents": [
    "onLanguage:polycrate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "polycrate",
        "aliases": [
          "Polycrate",
          "polycrate"
        ],
        "extensions": [
          ".poly"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "polycrate",
        "scopeName": "source.polycrate",
        "path": "./syntaxes/polycrate.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Polycrate",
      "properties": {
        "polycrate.validation.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable validation for Polycrate files"
        },
        "polycrate.completion.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-completion for Polycrate files"
        },
        "polycrate.hub.endpoint": {
          "type": "string",
          "default": "https://hub.polycrate.com",
          "description": "Polycrate Hub endpoint for block discovery"
        },
        "polycrate.cli.path": {
          "type": "string",
          "default": "polycrate",
          "description": "Path to the Polycrate CLI executable"
        }
      }
    },
    "commands": [
      {
        "command": "polycrate.validateWorkspace",
        "title": "Validate Workspace",
        "category": "Polycrate"
      },
      {
        "command": "polycrate.validateBlock",
        "title": "Validate Block",
        "category": "Polycrate"
      },
      {
        "command": "polycrate.searchBlocks",
        "title": "Search Blocks",
        "category": "Polycrate"
      },
      {
        "command": "polycrate.showBlockChangelog",
        "title": "Show Block Changelog",
        "category": "Polycrate"
      },
      {
        "command": "polycrate.showBlockVersionDiff",
        "title": "Show Block Version Diff",
        "category": "Polycrate"
      },
      {
        "command": "polycrate.compareBlockVersions",
        "title": "Compare Block Versions",
        "category": "Polycrate"
      },
      {
        "command": "polycrate.discoverBlocks",
        "title": "Discover Blocks from Hub",
        "category": "Polycrate"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .poly",
          "command": "polycrate.validateWorkspace",
          "group": "polycrate"
        },
        {
          "when": "resourceExtname == .poly",
          "command": "polycrate.validateBlock",
          "group": "polycrate"
        },
        {
          "when": "resourceExtname == .poly",
          "command": "polycrate.compareBlockVersions",
          "group": "polycrate"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .poly",
          "command": "polycrate.validateWorkspace",
          "group": "polycrate"
        },
        {
          "when": "resourceExtname == .poly",
          "command": "polycrate.validateBlock",
          "group": "polycrate"
        },
        {
          "when": "resourceExtname == .poly",
          "command": "polycrate.compareBlockVersions",
          "group": "polycrate"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.4",
    "webpack": "^5.100.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "yaml": "^2.3.4"
  }
}
