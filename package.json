{
  "name": "polycrate-vscode",
  "displayName": "Polycrate Language Support",
  "description": "Language support for Polycrate workspace and block files",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "keywords": [
    "polycrate",
    "infrastructure",
    "yaml",
    "blocks",
    "workspace"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ayedo/polycrate-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/ayedo/polycrate-vscode/issues"
  },
  "homepage": "https://github.com/ayedo/polycrate-vscode#readme",
  "license": "MIT",
  "activationEvents": [
    "onLanguage:polycrate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "polycrate",
        "aliases": ["Polycrate", "polycrate"],
        "extensions": [".poly"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "polycrate",
        "scopeName": "source.polycrate",
        "path": "./syntaxes/polycrate.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Polycrate",
      "properties": {
        "polycrate.validation.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable validation for Polycrate files"
        },
        "polycrate.completion.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-completion for Polycrate files"
        },
        "polycrate.hub.endpoint": {
          "type": "string",
          "default": "https://hub.polycrate.com",
          "description": "Polycrate Hub endpoint for block discovery"
        },
        "polycrate.cli.path": {
          "type": "string",
          "default": "polycrate",
          "description": "Path to the Polycrate CLI executable"
        }
      }
    },
    "commands": [
      {
        "command": "polycrate.validateWorkspace",
        "title": "Validate Workspace",
        "category": "Polycrate"
      },
      {
        "command": "polycrate.validateBlock",
        "title": "Validate Block",
        "category": "Polycrate"
      },
      {
        "command": "polycrate.searchBlocks",
        "title": "Search Blocks",
        "category": "Polycrate"
      },
      {
        "command": "polycrate.showBlockChangelog",
        "title": "Show Block Changelog",
        "category": "Polycrate"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .poly",
          "command": "polycrate.validateWorkspace",
          "group": "polycrate"
        },
        {
          "when": "resourceExtname == .poly",
          "command": "polycrate.validateBlock",
          "group": "polycrate"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .poly",
          "command": "polycrate.validateWorkspace",
          "group": "polycrate"
        },
        {
          "when": "resourceExtname == .poly",
          "command": "polycrate.validateBlock",
          "group": "polycrate"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "ajv": "^8.12.0"
  }
}